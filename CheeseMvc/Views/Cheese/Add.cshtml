@model CheeseMvc.ViewModels.AddCheeseViewModel

@{
    ViewBag.Title = "Add Cheeses";
    Layout = "_Layout";
}

<h2>Add Cheese</h2>
<form asp-controller="Cheese" asp-action="Add" method="post">
    
    <div class="text-danger">@Model.SaveChangesError</div>
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control"/>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.CheeseCategories" class="form-control"></select>
      
    </div>
    <input type="submit" value="Add cheese!" class="form-control"/>
</form>