@model System.Collections.Generic.List<CheeseMvc.Models.Menu>

@{
    ViewBag.Title = "Menus";
    Layout = "_Layout";
}

<h2>The Cheese Menu</h2>
<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>
@foreach (var menu in Model)
{
    <li>
        <a
            asp-controller="Menu"
            asp-action="ViewMenu"
            asp-route-id="@menu.ID">@menu.Name</a>
    </li>
}